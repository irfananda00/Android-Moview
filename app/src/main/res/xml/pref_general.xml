<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListPreference
        android:defaultValue="@string/pref_sort_popular"
        android:entries="@array/pref_sort_options"
        android:entryValues="@array/pref_sort_values"
        android:key="@string/pref_sort_key"
        android:title="@string/pref_sort_label"/>

    <ListPreference
        android:defaultValue="@string/pref_theme_dark"
        android:entries="@array/pref_theme_options"
        android:entryValues="@array/pref_theme_values"
        android:key="@string/pref_theme_key"
        android:title="@string/pref_theme_label"/>

</PreferenceScreen>